{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Rate list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fromdatetime</th>
                <th>Todatetime</th>
                <th>Rate</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('rate_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.fromDatetime %}{{ entity.fromDatetime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.toDatetime %}{{ entity.toDatetime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.rate }}</td>
                <td>{{ entity.status }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('rate_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('rate_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('rate_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
