{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Location list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>City</th>
                <th>Province</th>
                <th>Country</th>
                <th>Lat</th>
                <th>Lon</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('location_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.city }}</td>
                <td>{{ entity.province }}</td>
                <td>{{ entity.country }}</td>
                <td>{{ entity.lat }}</td>
                <td>{{ entity.lon }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('location_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('location_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('location_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
